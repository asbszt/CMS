<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CustomerManagerSystem.Views.HomeView"
             DataContext="{Binding HomeViewModel,Source={StaticResource ServiceLocator}}"
             Background="{DynamicResource PrimaryBackgrand}"
             Foreground="{DynamicResource PrimaryForegrand}">
    <Grid RowDefinitions="* *">
        <Grid Grid.ColumnDefinitions="*,*,*" HorizontalAlignment="Stretch" Height="300" Margin="20,20,20,20">
            <Button Command="{Binding AlertCommand}" Content="Customer" Margin="0,0,20,0" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            <Button Grid.Column="1" Command="{Binding AlertCommand}" Content="Customer" Margin="0,0,20,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            <Button Grid.Column="2" Command="{Binding AlertCommand}" Content="Customer" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
        </Grid>
    </Grid>

</UserControl>